---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";

import { workLinks, workTabItems } from "../data/workData.tsx";
import ReactTabs from "../components/ReactTabs.tsx";
---

<MainLayout title="Work" description="Jobs and projects">
  <div class="mx-6 flex h-full flex-col items-center justify-center gap-4 p-4">
    <h1 class="text-lg font-bold">
      <span
        class="font-tilt text-3xl font-semibold uppercase text-neon transition duration-500 group-hover/glass:text-primary group-hover/glass:shadow-neon group-hover/glass:text-shadow-glow md:text-4xl"
        >Work&nbsp</span
      >
      to see:
    </h1>
    <ReactTabs items={workTabItems} client:only="react" />
    <div
      class="group/glass mx-6 my-8 flex flex-col gap-4 rounded-sm border-2 border-neon border-opacity-30 bg-secondary bg-opacity-50 px-4 py-6 shadow backdrop-blur transition duration-300 hover:border-opacity-100 hover:shadow-glow hover:shadow-neon hover:backdrop-blur sm:backdrop-blur-none"
    >
      <div class="flex flex-wrap md:gap-4 lg:flex-col">
        {
          workLinks.map((item) => (
            <Link
              text={item.name}
              href={item.link}
              data-nav-link
              icon={{ name: item.icon?.name, side: item.icon?.side }}
              target="_blank"
              rel="noopener noreferrer"
            />
          ))
        }
      </div>
    </div>
  </div>
</MainLayout>
