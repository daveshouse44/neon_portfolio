---
import MainLayout from "../layouts/MainLayout.astro";
import Icon from "astro-icon";

import Link from "../components/Link.astro";

import { skillData, skillLinks } from "../data/skillData";
---

<MainLayout title="Skills" description="Things I can do">
  <div
    class="mx-6 flex h-full flex-col-reverse items-center justify-evenly gap-6 sm:flex-row sm:items-start"
  >
    <div
      class="group/glass my-8 flex h-fit flex-col gap-4 rounded-sm border-2 border-neon border-opacity-30 bg-secondary bg-opacity-50 px-4 py-6 shadow transition duration-300 hover:border-opacity-100 hover:shadow-glow hover:shadow-neon hover:backdrop-blur backdrop-blur sm:backdrop-blur-none"
    >
      <h1 class="text-lg font-bold">
        <span
          class="font-tilt text-3xl font-semibold uppercase text-neon transition duration-500 group-hover/glass:text-primary group-hover/glass:shadow-neon group-hover/glass:text-shadow-glow md:text-4xl"
          >Skills&nbsp</span
        >
         I am honing:
      </h1>
      <div class="flex flex-wrap sm:flex-col md:gap-4">
        {
          skillLinks.map((item) => (
            <Link
              text={item.name}
              href={item.path}
              data-nav-link
              icon={{ name: item.icon?.name, side: item.icon?.side }}
            />
          ))
        }
      </div>
    </div>
    <div class="my-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
      {
        skillData.map((item) => (
          <div class="group flex max-w-md flex-col items-center justify-evenly gap-2 rounded-sm border-2 border-neon border-opacity-30 bg-secondary bg-opacity-50 p-4 text-center shadow transition duration-300 hover:border-opacity-100 hover:shadow-glow hover:shadow-neon hover:backdrop-blur backdrop-blur sm:backdrop-blur-none md:gap-4">
            <Icon
              name={item.icon}
              class="h-10 w-10 text-primary transition duration-300 group-hover:text-neon"
            />
            <h2 class="font-tilt text-2xl font-bold uppercase text-neon transition duration-500 group-hover:text-primary group-hover:shadow-neon group-hover:text-shadow-glow md:text-3xl">
              {item.title}
            </h2>
            <h3 class="text-lg font-semibold">{item.description}</h3>
            <ul class="text-start">
              {item.list.map((el) => (
                <li>&bull;&nbsp;{el}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
