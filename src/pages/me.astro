---
import MainLayout from "../layouts/MainLayout.astro";
import Icon from "astro-icon";

import MyFace from "../components/MyFace.astro";
import Link from "../components/Link.astro";

import meData from "../data/meData";
---

<MainLayout title="Me" description="A bit more about me">
  <div class="mx-6 flex h-full flex-col items-center justify-center gap-4 p-4">
    <h1 class="text-xl font-bold">
      A bit more about&nbsp;<span
        class="font-tilt text-4xl font-bold uppercase text-neon transition duration-500 hover:text-primary hover:shadow-neon hover:text-shadow-glow md:text-5xl"
        >Me</span
      >
    </h1>
    <div class="mb-8 flex flex-col items-center gap-4 lg:flex-row">
      <div class="my-4 flex flex-col items-center lg:my-0">
        <MyFace size="medium" />
        <Link
          href="mailto:me@davetierney.dev"
          text="Contact me"
          icon={{ name: "ic:baseline-mail-outline", side: "right" }}
        />
      </div>
      <div class="flex flex-col items-center gap-4">
        <div
          class="group flex max-w-3xl flex-col justify-center gap-2 rounded-sm border-2 border-neon border-opacity-30 bg-secondary bg-opacity-50 p-6 shadow backdrop-blur transition duration-300 hover:border-opacity-100 hover:shadow-glow hover:shadow-neon hover:backdrop-blur sm:backdrop-blur-none md:gap-4"
        >
          <Icon
            name="fluent:person-info-16-regular"
            class="h-10 w-10 text-primary transition duration-300 group-hover:text-neon"
          />
          <h2
            class="font-tilt text-2xl font-bold uppercase text-neon transition duration-500 group-hover:text-primary group-hover:shadow-neon group-hover:text-shadow-glow md:text-3xl"
          >
            {meData[0].header}
          </h2>
          <div class="">
            {
              meData.map((data) =>
                data.text.map((el) => <p class="mb-4 last:mb-0">{el}</p>),
              )
            }
          </div>
          <ul class="text-base">
            {
              meData.map((data) =>
                data.facts.map((el: string) => (
                  <li class="mx-3 list-outside list-disc">{el}</li>
                )),
              )
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
