---
import MainLayout from "../layouts/MainLayout.astro";

import MyFace from "../components/MyFace.astro";
import Link from "../components/Link.astro";

import meData from "../data/meData";
---

<MainLayout title="Me">
  <h1 class="flex font-bold text-neutral-900">
    More about&nbsp<span class="text-brand">Me</span>
  </h1>
  <MyFace />
  <h2>
    A strategic approach to <span class="text-brand">Design</span> and <span
      class="text-brand">Development</span
    >
  </h2>
  {
    meData.map((item) => (
      <>
        <h4>{item.discipline}</h4>
        <p>{item.description}</p>
      </>
    ))
  }
  <Link
    href="mailto:davidetierney44@gmail.com"
    text="Contact me"
    icon={{ name: "ic:baseline-mail-outline", side: "right" }}
  />
</MainLayout>
