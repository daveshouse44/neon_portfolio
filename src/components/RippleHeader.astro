---
import { slugify, formatDate } from "../ts/utils";

const { category, title, author, date } = Astro.props;
---

<header class="my-4 grid place-items-center gap-4">
  <a
    class="rounded-sm border-2 border-neon border-opacity-30 bg-secondary bg-opacity-50 p-1 text-sm shadow transition duration-300 hover:border-opacity-100 hover:shadow-glow hover:shadow-neon hover:backdrop-blur backdrop-blur sm:backdrop-blur-none"
    href={`/category/${slugify(category)}`}>{category}</a
  >

  <h1 class="font-tilt text-3xl font-bold text-neon">{title}</h1>
  <p class="font-bold">
    <!-- Comment in line below if ever multiple authors -->
    <!-- <a href={`/author/${slugify(author)}`} -->
    <a href="/me"
      ><span
        class="transition duration-300 hover:text-neon hover:underline hover:decoration-neon"
        >{author}</span
      ></a
    > &#12316; {formatDate(date)}
  </p>
</header>
