---
import { Icon } from "astro-icon/components";
import contactData from "../data/contactData";
---

<footer>
  <div
    class="border-t-2 border-neon border-opacity-40 bg-neon bg-opacity-30 shadow backdrop-blur-lg hover:border-opacity-100 hover:bg-neon hover:bg-opacity-40 hover:shadow-glow hover:shadow-neon"
  >
    <div
      class="mx-auto flex max-w-screen-xl flex-col-reverse flex-wrap items-center justify-between gap-2 p-4 sm:flex-row"
    >
      <small class="font-semibold"
        >&copy;&nbsp<span id="copyright"></span>&nbspDave Tierney</small
      >
      <div class="sm: flex gap-4 sm:gap-6">
        {
          contactData.map((item) => (
            <a href={item.href} title={item.name}>
              <Icon name={item.icon} class={item.class} />
              <span class="sr-only">{item.name}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>

<script>
  document.querySelector("#copyright")!.textContent = new Date()
    .getFullYear()
    .toString();
</script>
