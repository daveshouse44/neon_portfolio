---
import { Icon } from "astro-icon";
interface Props {
  text: string;
  href: string;
  icon: {
    name: string;
    side: "left" | "right";
  };
}

const { text, href, icon, ...rest } = Astro.props as Props;
---

<a
  href={href}
  {...rest}
  class="group inline-flex gap-1 rounded py-2 pl-3 pr-4 font-medium uppercase text-neutral-900 transition hover:bg-gray-100 md:border-0 md:p-0 md:hover:bg-transparent"
>
  {
    icon && icon.side === "left" && (
      <>
        <Icon
          name={icon.name}
          height="24"
          width="24"
          class="transition group-hover:text-brand"
        />
        <div class="flex flex-col">
          <span>{text}</span>
          <span class="-mt-[3px] h-0.5 max-w-0 bg-brand transition-all delay-150 duration-500 group-hover:max-w-full" />
        </div>
      </>
    )
  }

  {
    icon && icon.side === "right" && (
      <>
        <div class="flex flex-col">
          <span>{text}</span>
          <span class="-mt-[3px] h-0.5 max-w-0 bg-brand transition-all duration-500 group-hover:max-w-full" />
        </div>
        <Icon
          name={icon.name}
          height="24"
          width="24"
          class="transition delay-500 group-hover:text-brand"
        />
      </>
    )
  }
</a>
