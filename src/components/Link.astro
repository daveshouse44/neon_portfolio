---
import { Icon } from "astro-icon";
interface Props {
  text: string;
  href: string;
  icon?: {
    name: string;
    side: "left" | "right";
  };
}

const { text, href, icon, ...rest } = Astro.props as Props;
---

<a href={href} {...rest}>
  {
    icon && icon.side === "left" && (
      <Icon name={icon.name} height="24" width="24" />
    )
  }

  <span>{text}</span>

  {
    icon && icon.side === "right" && (
      <Icon name={icon.name} height="24" width="24" />
    )
  }
</a>
